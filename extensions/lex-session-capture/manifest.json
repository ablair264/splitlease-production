{
  "manifest_version": 3,
  "name": "Lex Session Capture",
  "version": "1.0.5",
  "description": "Capture Lex Autolease session for SplitLease quotes",
  "permissions": [
    "activeTab",
    "cookies",
    "scripting"
  ],
  "host_permissions": [
    "https://associate.lexautolease.co.uk/*",
    "https://splitlease.netlify.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
