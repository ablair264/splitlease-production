{
  "manifest_version": 3,
  "name": "SplitLease Quote Automation",
  "version": "3.0.0",
  "description": "Automate quotes from Lex Autolease and Drivalia for SplitLease",
  "permissions": [
    "activeTab",
    "cookies",
    "scripting",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "host_permissions": [
    "https://associate.lexautolease.co.uk/*",
    "https://www.caafgenus3.co.uk/*",
    "https://splitlease.netlify.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://associate.lexautolease.co.uk/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://www.caafgenus3.co.uk/*"],
      "js": ["drivalia-content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.caafgenus3.co.uk/*"],
      "js": ["drivalia-interceptor.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "action": {
    "default_title": "Open Quote Automation",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["drivalia-interceptor.js"],
      "matches": ["https://www.caafgenus3.co.uk/*"]
    }
  ]
}
