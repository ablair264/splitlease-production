{
  "manifest_version": 3,
  "name": "Lex Quote Automation",
  "version": "2.1.0",
  "description": "Automate Lex Autolease quotes for SplitLease",
  "permissions": [
    "activeTab",
    "cookies",
    "scripting",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "host_permissions": [
    "https://associate.lexautolease.co.uk/*",
    "https://splitlease.netlify.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://associate.lexautolease.co.uk/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Open Lex Quote Automation",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
