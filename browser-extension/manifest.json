{
  "manifest_version": 3,
  "name": "Broker Platform - Lex Session Capture",
  "version": "1.0.0",
  "description": "Captures Lex Autolease session for the Broker Platform",
  "permissions": [
    "cookies",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://associate.lexautolease.co.uk/*",
    "http://localhost:3000/*",
    "https://*.railway.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://associate.lexautolease.co.uk/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
